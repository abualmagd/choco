  {title:'privacy policy',link:'/privacy-policy'},
  {title:'terms & conditions',link:'/terms'},
  {title:'contact us',link:'/contact'}
  ],
  })

  @end

  @component('components/authModal', {
  logoImage:'/public/assetes/images/logo.svg',
  loginParagraph:"Shop smarter. Master your style with our curated collections and discover daily deals.",
  loginHeading:" Shopping easily with our platform.",
  firstWord:"Start"
  })

